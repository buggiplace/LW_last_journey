// radio buttons
.tag-item {
  display: inline-block;
}

.tag-selector {
  position: absolute;
  transform: scale(0);
}

.tag-selector + label {
  cursor: pointer;
  display: inline-block;
  font-size: 0.7rem;
  border-radius: 50rem;
  padding: 0.1rem 0.5rem;
  background-color: white;
  color: #1EDD88;
  border: 1px solid #1EDD88;
  margin-right: 0.6rem;
  margin-bottom: 0.4rem;
}

.tag-selector:checked + label {
  background-color: #1EDD88;
  color: white;
}


// dynamic rich buttons

.category-wrapper {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background: white;
  // background-image: url("https://img.freepik.com/vektoren-kostenlos/stilvolle-sechseckige-linie-musterhintergrund_1017-19742.jpg?size=626&ext=jpg&ga=GA1.2.1599078823.1603670400")
}

.category-item {
  flex: 1 1 0%;
  margin: 5px;
}

.category-selector {
  position: absolute;
  transform: scale(0);

}

.category-selector + label {
  display: block;
  cursor: pointer;
  box-sizing: border-box;
  width: 250px;
  font-size: 16px;
  text-align: center;
  padding: 10px 10px 10px 10px;
  border: 1px solid #EAEAEA;
  border-radius: 50px;
  background-color: white;
}

.category-selector:checked + label {
  color: white !important;
}

