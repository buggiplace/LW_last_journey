
<div class="container">
<h1>THIS IS THE TILE FUNERAL TYPES</h1>
  <br>

  <%= simple_form_for(@funeral_type) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= f.input :burial_type, label: 'Please choose your favourite burial type',
            as: :radio_buttons, collection_wrapper_tag: 'div',
            collection_wrapper_class: 'category-wrapper',
            item_wrapper_class: 'category-item',
            input_html: {class: 'category-selector'},
            collection: FuneralType::CATEGORIES %>
      <p>Please specify below a favourite location for your funeral</p>
      <%= f.input :loc_street, label: 'Street'%>
      <%= f.input :loc_zip, label: 'Zip code'%>
      <%= f.input :loc_city, label: 'City'%>
      <%= f.input :comment, label: 'What else do you want to say?', :input_html => {:rows => 10}%>
      <%= f.button :submit, class: "btn btn-flat" %>
    </div>
  <% end %>

</div>


<br>
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

