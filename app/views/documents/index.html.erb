<div class="container d-flex justify-content-center flex-column align-items-center mt-2">
    <div class="form-design sectionwrapper4">
    <%= simple_form_for([@funeral, @document]) do |f| %>
      <%= f.error :base %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div>
        <%= image_tag "i_cloud.png", class: "illustration-cloud-documents1" %>
      </div>
      <h4 class="d-flex flex-start">Upload Documents</h4>
      <h2 class="d-flex flex-start">Make the most important documents available to your trusted person.</h2>
      <label class="btn upload-photo">
        Add a file!
        <span style="display:none;">
          <%= f.input :file, as: :file%>
        </span>
      </label>
      <p><i>Please be aware that in Germany only the original signed documents are legally binding.</i></p>
      <%= f.button :submit, class: "btn btn-lj-big-m2 flex-start" %>
    <% end %>

    <!-- <ul class="picturelist mt-5"> -->
