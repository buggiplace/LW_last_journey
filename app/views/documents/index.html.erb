          <%#= link_to 'Delete', funeral_document_path(@funeral, document), method: 'delete', data: { confirm: "Are you sure?" } %>
        <!-- </li> -->
      <%# end %>
    <!-- </ul> -->

    <ul class="picturelist documents-grid mt-5">
      <% @documents.each do |document| %>
        <li class="d-flex justify-content-center flex-column align-items-center document-single">
          <%= link_to cloudinary_url(document.file.key), target: "_blank" do %>
          <%= cl_image_tag document.file.key, format: :jpg, height: 400, width: 500, crop: :fill %>
          <% end %>
          <p>Filename: <%= document.file_name %></p>
          <%= link_to 'Delete', funeral_document_path(@funeral, document), method: 'delete', data: { confirm: "Are you sure?" }, class: "btn upload-photo mt-3 mb-2" %>
        </li>
      <% end %>
      </ul>
    </div>
</div>

