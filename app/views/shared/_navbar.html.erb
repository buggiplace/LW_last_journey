<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo_tree_w.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

<% if current_user %>
 <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Dashboard", funerals_dashboard_path, class: "nav-link" %>
      </li>
   <!--    <li class="nav-item">
        <%= link_to "Content", "#", class: "nav-link" %>
      </li> -->
      <li class="nav-item dropdown">
          <%= image_tag "avatar.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false unless current_user && current_user.representative?  %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to 'Dashboard', funerals_dashboard_path, class: "dropdown-item"%>
          <br>
          <%= link_to 'Digital Will', digital_will_path(@funeral), class: "dropdown-item"%>
          <%= link_to 'Funeral Type', funeral_type_path(@funeral), class: "dropdown-item"%>
          <%= link_to 'Playlist', playlist_path(@funeral), class: "dropdown-item"%>
          <%= link_to 'Representative', funerals_dashboard_path, class: "dropdown-item"%>
          <%= link_to 'Documents', funeral_documents_path(@funeral), class: "dropdown-item"%>
          <%= link_to 'Obituary', obituary_path(@funeral), class: "dropdown-item"%>
          <br>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
<% else %>
 <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
<% end %>


</div>

